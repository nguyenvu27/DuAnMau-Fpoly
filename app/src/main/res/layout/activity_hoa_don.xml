<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HoaDonActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:src="@mipmap/images" />

    <EditText
        android:id="@+id/edMaHoaDon"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Mã hóa đơn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/DateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DD-MM-YYYY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn"
            android:id="@+id/btnChon1"
            />
    </LinearLayout>




    <Button
        android:id="@+id/btnChon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn"
        />

    <Button
        android:id="@+id/btnXem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem hóa đơn"
        android:onClick="xemHoaDon"
        />
</LinearLayout>