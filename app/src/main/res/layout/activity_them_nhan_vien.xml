<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemNhanVienActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <ImageView

            android:id="@+id/imageViewThemNhanVien"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@mipmap/images" />



        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtTenDangNhap"
            android:layout_below="@+id/imageViewThemNhanVien"
            android:hint="Tên đăng nhập"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />

        <EditText
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtMatKhau"
            android:layout_below="@+id/edtTenDangNhap"
            android:hint="Mật khẩu"
            android:layout_centerHorizontal="true"
            android:ems="10"

            />

        <EditText
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtNhapLaiPass"
            android:layout_below="@+id/edtMatKhau"
            android:hint="Nhắc lại mật khẩu"
            android:layout_centerHorizontal="true"
            android:ems="10"

            />

        <EditText
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhone"
            android:layout_below="@+id/edtNhapLaiPass"
            android:hint="Phone"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtHoVaTen"
            android:layout_below="@+id/edtPhone"
            android:hint="Họ và tên"
            android:layout_centerHorizontal="true"
            android:ems="10"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            android:layout_below="@id/edtHoVaTen"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Lưu"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnList"
            android:layout_below="@id/btnAdd"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Danh sách"
            android:onClick="xemThemNguoiDung"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            />


    </RelativeLayout>







</ScrollView>